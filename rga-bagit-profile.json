{
  "name": "RGA BagIt Profile",
  "description": "BagIt Profile for the Rohingya Genocide Archive.",
  "Accept-BagIt-Version": [
    "0.97",
    "1.0"
  ],
  "Accept-Serialization": [
    "application/x-7z-compressed",
    "application/tar",
    "application/zip",
    "application/gzip",
    "application/x-rar-compressed",
    "application/tar+gzip"
  ],
  "Allow-Fetch.txt": false,
  "Serialization": "optional",
  "Manifests-Allowed": [
    "md5",
    "sha1",
    "sha224",
    "sha256",
    "sha384",
    "sha512"
  ],
  "Tag-Manifests-Allowed": [
    "md5",
    "sha1",
    "sha224",
    "sha256",
    "sha384",
    "sha512"
  ],
  "Manifests-Required": [
    "md5"
  ],
  "Tag-Manifests-Required": [
    "md5"
  ],
  "Tag-Files-Allowed": [
    "*"
  ],
  "BagIt-Profile-Info": {
    "BagIt-Profile-Identifier": "https://raw.githubusercontent.com/yvonneng/rga/main/rga-bagit-profile.json",
    "BagIt-Profile-Version": "1.3.0",
    "Contact-Email": "rohingyaarchive@gmail.com",
    "External-Description": "BagIt Profile for the Rohingya Genocide Archive. Last updated 1 Sept 2023",
    "Source-Organization": "Rohingya Genocide Archive",
    "Version": "1.0"
  },
  "Bag-Info": {
    "Bag-Size": {
      "required": true
    },
    "Bagging-Date": {
      "required": true
    },
    "Bagging-Software": {
      "required": true
    },
    "Contact-Email": {
      "required": true,
       "values":[
	 	   "rohingyaarchive@gmail.com"
	 ],
		"defaultValue":
		 "rohingyaarchive@gmail.com"
    },
    "External-Identifier": {
      "required": true,
      "help":
	 "The URL of the source. If no URL, leave blank."
    },
    "Internal-Sender-Identifier": {
      "required": true,
      "help":
    "RGA package name, e.g. RMN00001_20230901"
    },
    "Organization-Address": {
      "required": true,
      "values":[
           	 "https://rohingyagenocidearchive.org/"
         ]
    },
    "Payload-Oxum": {
      "required": true
    },
    "Source-Organization": {
      "required": true,
      "values":[
         	"Rohingya Genocide Archive" 
         ],
		"defaultValue":
		"Rohingya Genocide Archive"
    }
  },
  "Tag-Files-Required": []
}
